@model FishToolsStoreECommerceApp.Areas.ManagerPanel.Data.ViewModels.ManagerLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Fish Tools Yönetici Giriş</title>
    <link href="~/Areas/ManagerPanel/Assets/css/LoginStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="panelContainer">
        <div class="loginImage">
            <img src="~/Areas/ManagerPanel/Assets/PageImages/2068-fishing.gif" />
        </div>
        <div class="title">
            <h1>Fish Tools Store Giriş</h1>
        </div>
        <div>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary();
                if (ViewBag.warning != null)
                {
                    <div class="validation-summary-errors">
                        <div>@ViewBag.warning</div>
                    </div>
                }


                <div class="row">
                    @Html.EditorFor(x => x.Mail, new { htmlAttributes = new { @class = "input rounded", @placeholder = "Mail Adresiniz" } })

                </div>
                <div class="row">
                    @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "input rounded", @placeholder = "Şifreniz"} })
                </div>
                <div class="row">
                    <input type="submit" class="button rounded" value="Giriş Yap" />
                </div>
            }
        </div>
    </div>
</body>
</html>
